{
  "$schema": "https://opencode.ai/config.json",
  
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:MCP_CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "supabase": {
      "type": "remote",
      "url": "https://mcp.supabase.com/mcp?project_ref=gqalsczfephexbserzqp&read_only=true",
      "headers": {
        "Authorization": "Bearer {env:MCP_SUPABASE_ACCESS_TOKEN}"
      },
      "enabled": true
    },
    "stripe": {
      "type": "remote",
      "url": "https://mcp.stripe.com",
      "headers": {
        "Authorization": "Bearer {env:MCP_STRIPE_API_KEY}"
      },
      "enabled": true
    }
  }
}